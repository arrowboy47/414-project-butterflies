@article{weiss1991,
	title = {Forest Canopy Structure at Overwintering Monarch Butterfly Sites: Measurements with Hemispherical Photography},
	author = {Weiss, Stuart B. and Rich, Paul M. and Murphy, Dennis D. and Calvert, William H. and Ehrlich, Paul R.},
	year = {1991},
	month = {06},
	date = {1991-06-01},
	journal = {Conservation Biology},
	pages = {165--175},
	volume = {5},
	number = {2},
	doi = {10.1111/j.1523-1739.1991.tb00121.x},
	note = {One of the early and often cited papers that establishes wind protection and other microclimate variables as important to overwintering monarchs. This paper, however, does not address wind in any measureable way, and instead only hints at the proxy via hemispherical photography. This data presented here was more related to direct and indirect light penetration throughout the year, and how overwintering sites compare to nonoverwintering sites. There are no statistical claims made, just explatory plots explained. Ultimately, this hemispherical technique has gone on to be used widely in monarch conservation since this paper, and is used today. I have collaborated with Stu, and can see the beginnings of many of his ideas in this paper.}
}
